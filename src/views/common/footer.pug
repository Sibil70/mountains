footer.footer
  .footer__row
    .footer__col
      nav.menu
        ul.menu__list
          each item in [['works.html','Мои работы'], ['about.html','Обо мне'], ['blog.html','Блог'], ['index.html','Авторизация']]
            li.menu__item
              a.menu__link(href=`${item[0]}`) #{item[1]}
    .footer__col.footer__col_justyfy_right
      .footer__socials
        .socials
          - var socials = [['https://vk.com/id6802343', "vk"],['https://github.com/Sibil70', "github"],['https://www.instagram.com/alexandervarnaev', "in"]]
          ul.socials__list
              each item in socials
                li.socials__item
                  a(href=`${item[0]}`).socials__link.socials__link--rounded
                    +icon(item[1], 'socials__icon socials__icon--rounded')
