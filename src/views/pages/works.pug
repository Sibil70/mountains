extends ../main.layout.pug

block variables
    - var title = 'Мои работы'

block scripts
    script(src='about.bundle.js')

block content
    section.header
        .header__links
        .socials
          - var socials = [['https://vk.com/id6802343', "vk"],['https://github.com/Sibil70', "github"],['https://www.instagram.com/alexandervarnaev', "in"]]
          ul.socials__list
              each item in socials
                li.socials__item
                  a(href=`${item[0]}`).socials__link
                    +icon(item[1], 'socials__icon socials__icon--white')
        .header__menu
            .hamburger-menu
                .hamburger-menu__item
                .hamburger-menu__item
                .hamburger-menu__item
        .header__content-wraper
            .user
                .user__content
                    .user__pic
                        img.user__img(src="./assets/images/content/user.jpg")
                    h1.user__title Варнаев Александр
                    .user__txt Личный сайт веб-разработчика
        .header__btn
            .arrow
                +icon('arrow_down', 'arrow__down')

    .work-title.work-title--top
      h1.title Мои работы
      
    section.slider.slider-js
      .slider__description
        .description__container
          .description__title
            .subtitle Сайт школы онлайн образования
          .description__tech HTML, CSS, JAVASCRIPT
          a(href='#').description__button.button
            +icon('link', 'description__button-img')
            span.description__button-text Посмотреть сайт
      .slider__preview
        .slider__prev-slide
          +image('content/slider1.png', 'slider1', 'prev-slide__img')
        .slider__control-row
          button.slider__down-slide
            +image('content/slider2.png', 'slider2', 'control-slide__img')
            .slider__prev-arrow-down
              +icon('portf_arrow_down', 'description__button-img')
          button.slider__up-slide
            +image('content/slider3.png', 'slider3', 'control-slide__img')
            .slider__prev-arrow-down
              +icon('portf_arrow_up', 'description__button-img')
    section.reviews
      .work-title
        h1.title Что обо мне говорят
      .reviews__container
        ul.reviews__list
          li.reviews__item
            .reviews__content
              +image('content/quot.png', 'quot', 'rewiews__quot-img')
              .reviews__text Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 2 месяца только самых тяжёлых испытаний и бессонных ночей!
            .reviewer_container
              .reviewer__avatar
                +image('content/review_avatar1.png', 'Ковальчук Дмитрий', 'reviewer__avatar-img')
              .reviewer__data
                .reviewer__name Ковальчук Дмитрий
                .rewiewer__position основатель Loftschool

          li.reviews__item
            .reviews__content
              +image('content/quot.png', 'quot', 'rewiews__quot-img')
              .reviews__text Этот код выдержит лббые испытания. Только пожалуйста, не загружайте сайт на слишком старых браузерах!
            .reviewer_container
              .reviewer__avatar
                +image('content/review_avatar2.png', 'Сабанцев Владимир', 'reviewer__avatar-img')
              .reviewer__data
                .reviewer__name Сабанцев Владимир
                .rewiewer__position преподаватель
      .feedback-container
        form.feedback-form
          .subtitle.subtitle__feedback Связаться со мной
          input(placeholder='Имя').input__text.input__name
          input(placeholder='Email').input__text.input__email
          input(placeholder='Ваше сообщение').input__text.input__message
          .buttons__row
            submit.button.button__send Отправить
            button(type='reset').button.button__clear Очистить
      .bottom__arrow
        .arrow
          +icon('portf_arrow_up', 'arrow__down')
