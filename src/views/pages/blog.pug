extends ../main.layout.pug

block variables
    - var title = 'Варнаев Александр | Блог'

block scripts
    script(src='blog.bundle.js')

block content

    section.header
        .header__links
            .socials
                - var socials = [['https://vk.com/id6802343', "vk"],['https://github.com/Sibil70', "github"],['https://www.instagram.com/alexandervarnaev', "in"]]
                ul.socials__list
                    each item in socials
                        li.socials__item
                            a(href=`${item[0]}`).socials__link
                                +icon(item[1], 'socials__icon socials__icon--white')
        .header__menu
            .hamburger-menu
                .hamburger-menu__item
                .hamburger-menu__item
                .hamburger-menu__item
        .header__content-wraper
            .user
                .user__content
                    .user__pic
                        img.user__img(src="./assets/images/content/user.jpg")
                    h1.title--whiteuser__title Блог
                    .user__txt Статьи, которые я написал
        .header__btn
            .arrow
                +icon('arrow_down', 'arrow__down')
    section.blog
      aside.blog-menu
        ul.blog-menu__list
          li.blog-menu__item.blog-menu__item--active
            a(href=`#`).blog-menu__link Самое важное в SASS
          each item in ["Приёмы в вёрстке, без которых не обходится ни одни сайт", "Самый необходимый набор Gulp плагинов", "Почему я выбрал Jade"]
            li.blog-menu__item
              a(href=`#`).blog-menu__link #{item}
      .blog-articles
        ul.blog-articles__list
          li.blog-articles__item
            article.article
              h1.article__title Самое важное в SASS
              .article__date 22 ноября 2018
